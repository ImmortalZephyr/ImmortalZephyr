{
  "project_name": "Ultimate_Dashboard_System",
  "version": "2.4.0",
  "author": "GitHub_Contributor",
  "layout_engine": "Dynamic_Grid_v3",
  
  "global_settings": {
    "theme": "dark",
    "primary_color": "#4f46e5",
    "border_radius": "8px",
    "font_family": "'Inter', sans-serif",
    "enable_animations": true,
    "animation_speed": "300ms",
    "rtl_support": false
  },

  "viewport_breakpoints": {
    "xs": "320px",
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },

  "header_config": {
    "visible": true,
    "sticky": true,
    "height": "64px",
    "components": {
      "logo": {
        "path": "/assets/logo.svg",
        "alt": "Brand Logo",
        "link": "/"
      },
      "search_bar": {
        "enabled": true,
        "placeholder": "Search everything...",
        "shortcut": "Ctrl+K"
      },
      "notifications": {
        "enabled": true,
        "type": "dropdown",
        "max_display": 5
      },
      "user_profile": {
        "show_avatar": true,
        "show_name": true,
        "dropdown_links": [
          {"label": "Profile", "icon": "user", "url": "/profile"},
          {"label": "Settings", "icon": "settings", "url": "/settings"},
          {"label": "Billing", "icon": "credit-card", "url": "/billing"},
          {"label": "Logout", "icon": "log-out", "url": "/logout"}
        ]
      }
    }
  },

  "sidebar_config": {
    "position": "left",
    "width_expanded": "260px",
    "width_collapsed": "80px",
    "collapsible": true,
    "default_state": "expanded",
    "navigation_groups": [
      {
        "group_name": "Main Dashboard",
        "items": [
          {"id": "dash_1", "title": "Analytics", "icon": "chart", "badge": "New"},
          {"id": "dash_2", "title": "Real-time", "icon": "activity"}
        ]
      },
      {
        "group_name": "Management",
        "items": [
          {"id": "mgt_1", "title": "Users", "icon": "users"},
          {"id": "mgt_2", "title": "Roles", "icon": "shield"},
          {"id": "mgt_3", "title": "Permissions", "icon": "lock"}
        ]
      },
      {
        "group_name": "Resources",
        "items": [
          {"id": "res_1", "title": "Documentation", "icon": "book"},
          {"id": "res_2", "title": "API Keys", "icon": "key"},
          {"id": "res_3", "title": "System Logs", "icon": "terminal"}
        ]
      }
    ]
  },

  "main_content_area": {
    "padding": "24px",
    "max_width": "1440px",
    "background_color": "#f9fafb",
    "grid_system": {
      "columns": 12,
      "gutter": "16px"
    },
    "widgets": [
      {
        "type": "stat_card",
        "id": "total_revenue",
        "default_size": {"w": 3, "h": 1},
        "refresh_interval": 60000
      },
      {
        "type": "line_chart",
        "id": "traffic_overview",
        "default_size": {"w": 9, "h": 3},
        "interactive": true
      }
      /* Lặp lại cấu trúc này cho hàng trăm widget khác nếu cần quy mô lớn */
    ]
  },

  "footer_config": {
    "enabled": true,
    "content_type": "minimal",
    "copyright": "© 2026 Ultimate System Inc.",
    "social_links": [
      {"platform": "github", "url": "https://github.com/yourproject"},
      {"platform": "twitter", "url": "https://twitter.com/yourproject"}
    ]
  },

  "advanced_overrides": {
    "mobile_optimized": true,
    "lazy_loading_threshold": 0.5,
    "cdn_endpoint": "https://cdn.example.com/assets/",
    "security_headers": {
      "Content-Security-Policy": "default-src 'self'",
      "X-Frame-Options": "DENY"
    }
  }
}
